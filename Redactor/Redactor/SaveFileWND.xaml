<Window x:Class="Redactor.SaveFileWND"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Redactor"
        mc:Ignorable="d"
        Title="SaveFileWND" Height="188" Width="251">
    <Grid>
        <TextBox x:Name="FileNameTextBox" HorizontalAlignment="Left" Height="23" Margin="113,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="ExtensionComboBox"  HorizontalAlignment="Left" Margin="113,51,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name of file:" HorizontalAlignment="Left" Margin="6,7,0,0" VerticalAlignment="Top"/>
        <Label Content="Extension:" HorizontalAlignment="Left" Margin="6,47,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="113,127,0,0" VerticalAlignment="Top" Width="57" Click="OkButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="175,127,0,0" VerticalAlignment="Top" Width="57" Click="CancelButton_Click"/>

    </Grid>
</Window>
